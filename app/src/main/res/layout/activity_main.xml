<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kouram.activitystudy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <com.skp.Tmap.TMapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="450dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <Button
                    android:id="@+id/button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="History" />

                <TextView
                    android:id="@+id/remainDistanceText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_above="@+id/totalDistanceText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/totalDistanceText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="TextView"
                    android:layout_alignBaseline="@+id/button"
                    android:layout_alignBottom="@+id/button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/routeMenu"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="RouteMenu" />

            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/navigationText"
            android:layout_width="118dp"
            android:layout_height="29dp"
            android:text="TextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>










